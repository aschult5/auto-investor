{
	"version": 1,

	"formatters": {
		"simple": {
			"format": "%(levelname)s - %(message)s"
		},

		"detailed": {
			"format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
		}
	},

	"handlers": {
		"console": {
			"class": "logging.StreamHandler",
			"level": "INFO",
			"formatter": "simple",
			"stream": "ext://sys.stdout"
		},

		"info_file_handler": {
			"class": "logging.handlers.RotatingFileHandler",
			"level": "INFO",
			"formatter": "detailed",
			"filename": "info.log",
			"maxBytes": 1048576,
			"backupCount": 1,
			"encoding": "utf8"
		},

		"error_file_handler": {
			"class": "logging.handlers.RotatingFileHandler",
			"level": "ERROR",
			"formatter": "detailed",
			"filename": "errors.log",
			"maxBytes": 1048576,
			"backupCount": 1,
			"encoding": "utf8"
		}
	},

	"loggers": {
		"": {
			"level": "INFO",
			"handlers": ["console", "info_file_handler", "error_file_handler"]
		}
	}
}

